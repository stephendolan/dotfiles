# vim: set filetype=sh :

# MODERN TOOL REPLACEMENTS
alias ll='eza --long --all --group-directories-first'
alias la='eza --long --all --group-directories-first'

# EDITOR
alias vi='nvim'
alias vim='nvim'

# GIT
alias g='git'
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gl='git pull'
alias gd='git diff'

# SHORTCUTS
alias c='claude'
alias s='scry'
alias dc='docker-compose'
alias lg='lazygit'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Smart zoxide: z with args jumps, z without args opens interactive picker
z() {
  if [[ $# -eq 0 ]]; then
    __zoxide_zi
  else
    __zoxide_z "$@"
  fi
}
