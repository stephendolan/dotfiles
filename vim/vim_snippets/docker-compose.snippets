snippet base "Base Docker Compose file for Postgres" b
version: "3.6"

services:
  postgres:
    image: postgres:12-alpine
    environment:
      - POSTGRES_PASSWORD=postgres
    ports:
      - target: 5432
        published: 5432
    volumes:
      - type: volume
        source: postgres_data_${1:app_name}
        target: /var/lib/postgresql/data

volumes:
  postgres_data_$1:
endsnippet
